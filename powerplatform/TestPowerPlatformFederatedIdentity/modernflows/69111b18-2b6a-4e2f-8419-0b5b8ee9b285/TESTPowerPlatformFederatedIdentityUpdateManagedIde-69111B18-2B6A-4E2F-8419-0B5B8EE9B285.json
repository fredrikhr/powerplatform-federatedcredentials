{
  "properties": {
    "connectionReferences": {
      "dataverse": {
        "impersonation": {
          "source": "invoker"
        },
        "runtimeSource": "embedded",
        "connection": {
          "connectionReferenceLogicalName": "test_pwrplatf_pp-fic_dataverse"
        },
        "api": {
          "name": "shared_commondataserviceforapps"
        }
      }
    },
    "definition": {
      "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
      "contentVersion": "1.0.0.0",
      "parameters": {
        "$authentication": {
          "defaultValue": {},
          "type": "SecureObject"
        },
        "$connections": {
          "defaultValue": {},
          "type": "Object"
        }
      },
      "triggers": {
        "manual": {
          "type": "Request",
          "kind": "Button",
          "inputs": {
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "title": "Display Name",
                  "description": "Display Name of the Managed Identity, leave empty if not modified."
                },
                "applicationId": {
                  "type": "string",
                  "format": "uuid",
                  "title": "Application ID",
                  "description": "Application ID (aka. Client ID) of Federated Identity Service App Registration in Entra ID for the current Tenant."
                }
              },
              "required": [
                "applicationId"
              ]
            }
          }
        }
      },
      "actions": {
        "FIC_Original_Managed_Identity": {
          "runAfter": {},
          "type": "OpenApiConnection",
          "inputs": {
            "parameters": {
              "entityName": "managedidentities",
              "recordId": "1304a7e4-ed28-f011-8c4d-7c1e5226ec1f"
            },
            "host": {
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps",
              "operationId": "GetItem",
              "connectionName": "dataverse"
            }
          }
        },
        "FIC_Updated_Managed_Identity": {
          "runAfter": {
            "FIC_Original_Managed_Identity": [
              "Succeeded"
            ]
          },
          "type": "OpenApiConnection",
          "inputs": {
            "parameters": {
              "entityName": "managedidentities",
              "recordId": "1304a7e4-ed28-f011-8c4d-7c1e5226ec1f",
              "item/name": "@if(greater(length(trim(coalesce(triggerBody()?['name'], ''))), 0), trim(triggerBody()['name']), body('FIC_Original_Managed_Identity')['name'])",
              "item/tenantid": "@null",
              "item/applicationid": "@triggerBody()['applicationId']"
            },
            "host": {
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps",
              "operationId": "UpdateRecord",
              "connectionName": "dataverse"
            }
          }
        }
      }
    },
    "templateName": null
  },
  "schemaVersion": "1.0.0.0"
}